  <h1>Companies at Uncubed</h1>

  <ul>
  <% @companies.each do |company| %>
  <li><a href="/company/<%= company.id %>"><%= company.name %></a> (<%= company.size %>)
      <ol>
        <% company.jobs do |job| %>
          <li><%= job.title %></li>
        <% end %>
      </ol>
    </li>
  <% end %>
  </ul>
